<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DecentPass.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DecentPass"
    Shell.FlyoutBehavior="Flyout"
    Title="DecentPass">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="Gopass CLI"
            ContentTemplate="{DataTemplate local:CommandPage}"
            Route="CommandPage" />
    </TabBar>
</Shell>
